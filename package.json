  "license": "ISC",
  "devDependencies": {
    "browser-sync": "^2.18.13",
    "cssnano": "^3.10.0",
    "lilcss": "0.0.0",
    "postcss-clean": "^1.1.0",
    "postcss-cli": "^4.1.1",
    "postcss-cssnext": "^3.0.2"
  }
}
