  "main": "index.js",
  "scripts": {
    "start": "npm run serve & npm run css:watch",
    "test": "echo \"Error: no test specified\" && exit 1",
    "css:watch": "postcss 'css/*.css' -w --use postcss-cssnext --dir dist/",
    "css:build": "postcss dist/build.css --use cssnano --no-map > dist/final.css",
    "css:strip": "lilcss dist/main.css -f *.html > dist/build.css",
    "serve": "browser-sync start -s -f ** --https"
  },
